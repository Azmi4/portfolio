script(type="text/x-template")#slider-container
  .works-slider
    display(
      :works="works"
      :current-work="currentWork"
      :current-index="currentIndex"
      @slide="handleSlide"
    )
    info(
      :current-work="currentWork"
    )

script(type="text/x-template")#slider-display
  .works-left
    .slider
      img(:src="currentWork.photo").fullpic
      thumbs(
        :works="works"
        :current-work="currentWork"
      )
      btns(
        @slide="$emit('slide', $event)"
      )
    .slider__number(:data-slide='currentIndex + 1')

script(type="text/x-template")#slider-thumbs
  .slider__preview
    ul.previews
      li.previews__item(
        v-for="work in works"
        :key="work.id"
        :class="{previews__active: work.id === currentWork.id}"
      )
        img(:src="work.photo").previews__pic

script(type="text/x-template")#slider-btns
  .slider__buttons
    .slider__button
      button.slider-buttons__item.slider-buttons__item_slide_next(@click.prevent="$emit('slide', 'next')")
        +icon("scroll-arrow", "slider-button__scroll")
      button.slider-buttons__item.slider-buttons__item_slide_prev(@click.prevent="$emit('slide', 'prev')")
        +icon("scroll-arrow", "slider-button__scroll")    

script(type="text/x-template")#slider-info
  .works-right
    tags(
      :tags="tagsArray"
    )
    .works__text
      h3.works__title {{currentWork.title}}
      .works__desc-text
        p {{currentWork.desc}}
        a(:href="currentWork.link").iconed-link
          +icon("Link", "iconed-link__icon")
          .iconed-link__text Посмотреть сайт

script(type="text/x-template")#slider-tags
  .works__tags
    ul.tags
      li.tags__item(v-for="tag in tags" :key="tag")
        .tag {{tag}}