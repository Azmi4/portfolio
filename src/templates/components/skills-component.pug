script(type="text/x-template")#skills-list
  .skills-user
    ul.skills__row
      li.skills__item(v-for="skill in skills" :key="skill.skillsGroup")
        skills-row(
          :skill="skill"
        )

script(type="text/x-template")#skills-row
  .skills-group
    .skills-group__title {{skill.skillsGroup}}
    ul.skills-group__items
      li.skills-group__item(v-for="(skillPercent, skillName) in skill.skills")
        skill(
          :skill-name="skillName"
          :skill-percent="skillPercent"
        )

script(type="text/x-template")#skill
  .skill
    svg.skill-chart(viewBox="0 0 100 100")
      - var r = 47
      circle.skill__circle.skill__circle_under(cx="50" cy="50" r=r)
      circle.skill__circle.skill__circle_above(cx="50" cy="50" r=r ref="color-circle" stroke-dasharray=295)
    .skill__name {{skillName}}