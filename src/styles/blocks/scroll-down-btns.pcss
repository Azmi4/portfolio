.scroll-down-btns {
  display: flex;
  align-items: center;
  background: transparent;
  color: #736f6b;
  font-size: 18px;
  font-weight: 600;
  outline: none;
  &:hover {
    color: #ff9d00;
  }
}

.scroll-down-btns:hover .scroll__down {
  fill: #ff9d00;
}

.scroll__down {
  width: 30px;
  height: 30px;
  fill: #736f6b;
}
