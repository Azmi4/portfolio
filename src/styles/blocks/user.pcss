.user {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 300px;
}

.user__avatar {
  margin-bottom: 75px;
}

.user__desc {
  font-weight: 800;
}

.user__desc-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 17px;
  letter-spacing: 1px;

  &:last-child {
    margin-bottom: 0;
  }
}

.user__key {
  opacity: .4;
  margin-right: 20px;
}