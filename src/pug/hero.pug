section.hero
  .container.hero__container
    header.header.hero__header
      .hero__logo
        .logo AA
      .hero__menu
        nav.nav.nav-adaptive#hamburgerMenu
          - var menu = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться']
            ul.nav__list
              each item in menu
                li.nav__item
                  a.nav__link #{item}
              .hero__links_adaptive
                - var icons = ['insta', 'vk', 'github']
                  ul.socials
                    each item in icons
                      li.socials__item
                        a(href="#").socials__link
                          +icon(`${item}`, 'socials__icon')
      .hero__links
        - var icons = ['insta', 'vk', 'github']
          ul.socials
            each item in icons
              li.socials__item
                a(href="#").socials__link
                  +icon(`${item}`, 'socials__icon')
      a(href="#").hamburger.hamburger--spring#hamburgerButton
        .hamburger-box
          .hamburger-inner
    .hero__content
      .user-info
        h1.user-info__desc Личный сайт веб разработчика
        .user-info__username Азамат Арслангараев
    .hero__btns
      button.scroll-down-btns Скролл
        +icon('scroll', 'scroll__down')